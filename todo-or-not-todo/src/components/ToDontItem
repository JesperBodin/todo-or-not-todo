<li v-for="todo in completedTodos" :key="todo.id" class="todo-item">
  <button @click="remove(todo)" class="removeBtn">x</button>
  <div class="todo-cell due-date">
    <p>Deadline: {{ todo.dueDate }}</p>
  </div>
  <div class="todo-cell text done">
    <h3
      class="todo-text done"
      :class="{ done: todo.done }"
      @click="toggleDone(todo.id)"
    >
      {{ todo.text }}
    </h3>
  </div>
</li>
